<resources>

    <!-- ActionBar 标题文本 -->
    <style name="MyActionBarTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
    </style>

    <!-- 数字键盘 -->
    <style name="etKeyboard">
        <item name="android:layout_width">@dimen/keyboard_et_size</item>
        <item name="android:layout_height">@dimen/keyboard_et_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/passwordbox_64</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="btnKeyboard">
        <item name="android:layout_width">@dimen/keyboard_btn_size</item>
        <item name="android:layout_height">@dimen/keyboard_btn_size</item>
        <item name="android:gravity">center</item>
    </style>
    <!--用户名显示框 -->
    <style name="btnUserShower">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="tvUserShower">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <!-- 登录页面 -->

    <!-- 测滑菜单 -->
    <style name="ivSlidingmenuUserPic">
        <item name="android:layout_width">@dimen/generalViewBig</item>
        <item name="android:layout_height">@dimen/generalViewBig</item>
        <item name="android:background">@drawable/add_defual</item>
    </style>
    <style name="tvSlidingmenuUserName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/generalTextMiddle</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="lvSlidingmenuList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ivSlidingmenuItemPic">
        <item name="android:layout_width">@dimen/generalViewMiddle</item>
        <item name="android:layout_height">@dimen/generalViewMiddle</item>
        <item name="android:layout_marginLeft">@dimen/generalPadingSmall</item>
    </style>
    <style name="tvSlidingmenuItemName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/generalPadingSmall</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/generalTextMiddle</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
