<resources>

    <!-- ActionBar 标题文本 -->
    <style name="MyActionBarTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
    </style>

    <!-- 数字键盘 -->
    <style name="keyboard_editText">
        <item name="android:layout_width">@dimen/keyboard_et_size</item>
        <item name="android:layout_height">@dimen/keyboard_et_size</item>
    </style>
    <style name="keyboard_button">
        <item name="android:layout_width">@dimen/keyboard_btn_size</item>
        <item name="android:layout_height">@dimen/keyboard_btn_size</item>
    </style>
    <!--用户名显示框 -->
    <style name="user_shower_btn">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="user_shower_tv">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">80dp</item>
    </style>
</resources>
